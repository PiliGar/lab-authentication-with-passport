<section>
  <h2>Sign Up</h2>
  <form action="/signup" method="POST" class="col col-sm-6">
    <div class="form-group">
      <label for="username">Email address</label>
      <input id="username" class="form-control" type="email" name="username" placeholder="jonsnow@winterfell.com">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" type="password" class="form-control" name="password" placeholder="Your password">
    </div>
    {{#if message}}
    <div class="error-message">{{ message }}</div>
    {{/if}}
    <button type="submit" class="btn btn-primary">Create account</button>
    <p class="account-message">
      Do you already have an account?
      <a href="/login">Log in</a>
    </p>
  </form>
</section>